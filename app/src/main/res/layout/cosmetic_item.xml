<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cosmeticImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="6dp"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/cosmeticTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textSize="20sp"
        android:text="cosmetic name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cosmeticImg" />
    <TextView
        android:paddingTop="6dp"
        android:layout_below="@id/cosmeticTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="55dp"
        android:text="D-  "
        android:layout_toEndOf="@+id/cosmeticImg" />
    <TextView
        android:paddingTop="8dp"
        android:layout_below="@id/cosmeticTitle"
        android:id="@+id/cosmeticDday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="true"
        android:text="cosmetic Dday"/>
        <!--android:layout_alignBottom="@+id/cosCateImg" -->
    <!--<ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_clock"
        android:layout_below="@id/cosmeticTitle"
        android:layout_toRightOf="@id/cosmeticImg"
        android:id="@+id/cosCateImg"
        android:layout_alignBottom="@id/cosmeticImg"
        android:layout_toLeftOf="@id/cosmeticDday"/>-->
</RelativeLayout>